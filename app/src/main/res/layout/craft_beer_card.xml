<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activated"
    android:layout_marginBottom="4dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/background_activated"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout


            android:id="@+id/cardviewlayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"

            android:background="@color/white">

            <ImageView
                android:id="@+id/rowFavouriteImg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="fav"
                android:gravity="center_vertical"
                android:src="@drawable/tumbs_on" />

            <ImageView
                android:id="@+id/rowDeleteImg"
                android:layout_width="38dp"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="5dp"
                android:contentDescription="fav"
                android:src="@drawable/delete" />

            <TextView
                android:id="@+id/rowBeerName"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/rowFavouriteImg"
                android:layout_alignParentStart="true"
                android:layout_marginStart="68dp"
                android:gravity="center_vertical"
                android:text="Beer Name"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowCraftBar"
                android:layout_width="130dp"
                android:layout_height="16dp"
                android:layout_alignStart="@+id/rowBeerName"
                android:layout_alignBottom="@+id/rowFavouriteImg"
                android:gravity="center_vertical"
                android:text="Bar Name"
                android:textColor="@color/colorAccent"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rowFavouriteImg"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="71dp"
                android:gravity="center_vertical"
                android:text="5.0 *"
                android:textColor="@color/colorAccent"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rowRating"
                android:layout_alignTop="@+id/rowBeerName"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="4dp"

                android:gravity="center_vertical"
                android:text="â‚¬3.99"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>